<%= render 'shared/header' %>

<!-- Page Title #1 -->
<section id="page-title" class="page-title bg-overlay bg-overlay-dark2">
    <div class="bg-section">
        <%= image_tag "page-titles/1.jpg", alt:"background" %>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
                <div class="title title-1 text-center">
                    <div class="title--content">
                        <div class="title--heading">
                            <h1>Agents</h1>
                        </div>
                        <ol class="breadcrumb">
                            <li><%= link_to "Home", root_path %></li>
                            <li class="active">Agents</li>
                        </ol>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- #page-title end -->

<!-- agents -->
<section id="agents" class="agents bg-white pt-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="heading heading-2 text-center mb-70">
                    <h2 class="heading--title">Trusted Agents</h2>
                    <p class="heading--desc">Duis aute irure dolor in reprehed in volupted velit esse dolore</p>
                </div>
            </div>
        </div>
        <div class="row mb-55">
            <!-- agent #1 -->
            <% @users.each_with_index do |user, index| %>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="agent">
                        <div class="agent--img">
                            <%= image_tag url_for(user.photo), class:"img-responsive"  if user.photo.attached?%>
                            <div class="agent--details">
                                <p><%= user.description %>.</p>
                                <div class="agent--social-links">
                                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                                    <a href="#"><i class="fa-brands fa-dribbble"></i></a>
                                    <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="agent--info">
                            <h5 class="agent--title">
                                <%= link_to "#{user.firstname} #{user.lastname}", agent_profile_path(user) %>
                            </h5>
                            <h6 class="agent--position"><%= user.position.name %></h6>
                        </div>
                    </div>
                    <!-- .agent end -->
                </div>
                <!-- Abre una nueva fila despuÃ©s de cada tercer agente -->
                <% if (index + 1) % 3 == 0 %>
                    </div>
                    <div class="row">
                <% end %>
            <% end %>
        </div>
    </div>
</section>
